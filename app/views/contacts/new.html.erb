<div class="container">
  <h1>Contact</h1>
  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.text_area :name, :required => true %>
    <%= f.text_area :email, :required => true %>
    <%= f.text_area :message, :as => :text, :required => false, :input_html => {:rows => 10} %>
    <div class="hidden">
      <%= f.text_area :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class="form-actions">
      <%= f.submit :submit %>
    </div>
  <% end %>
</div>
